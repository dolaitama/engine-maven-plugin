<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${uname}Mapper">
	<!-- ${uname}管理 start -->
	<resultMap id="BaseResultMap" type="${uname}">
	#foreach(${col} in ${cols})
		<result column="${col.realname}" property="${col.colName}" />
	#end
	</resultMap>

	<insert id="insert" parameterType="${uname}">
		insert into ${tablename}(
		<trim suffixOverrides=",">
		#foreach(${col} in ${cols})
		#if(${col.colName} == "id")
		#if(${isCreateId})
			<if test="${col.colName} != null">
				${col.realname},
			</if>
		#end
		#else
			<if test="${col.colName} != null">
				${col.realname},
			</if>
		#end
		#end
		</trim>
		) values (
		<trim suffixOverrides=",">
		#foreach(${col} in ${cols})
		#if(${col.colName} == "id")
		#if(${isCreateId})
			<if test="${col.colName} != null">
				#{${col.colName}},
			</if>
		#end
		#else
			<if test="${col.colName} != null">
				#{${col.colName}},
			</if>
		#end
		#end
		</trim>
		)
	</insert>

	<update id="delete" parameterType="${uname}">
		delete from ${tablename}
		<trim prefix="where" prefixOverrides="and | AND | or | OR">
		#foreach(${col} in ${cols})
			<if test="${col.colName} != null">
				and ${col.realname} = #{${col.colName}}
			</if>
		#end
		</trim>
	</update>

	<update id="update" parameterType="${uname}">
		update ${tablename}
		<trim prefix="set" suffixOverrides=",">
		#foreach(${col} in ${cols})
			<if test="${col.colName} != null">
				${col.realname} = #{${col.colName}},
			</if>
		#end
		</trim>
		<where>id=${id}</where>
	</update>

	<select id="getByParam" parameterType="String" resultMap="BaseResultMap">
		select * from ${tablename}
		<trim prefix="where" prefixOverrides="and | AND | or | OR">
		#foreach(${col} in ${cols})
			<if test="${col.colName} != null">
				and ${col.realname} = #{${col.colName}}
			</if>
		#end
		</trim>
	</select>

	<select id="queryList" resultMap="BaseResultMap">
		select * from ${tablename}
		<trim prefix="where" prefixOverrides="and | AND | or | OR">
		#foreach(${col} in ${cols})
			<if test="${col.colName} != null">
				and ${col.realname} = #{${col.colName}}
			</if>
		#end
		</trim>
	</select>

	<select id="queryDataGrid" resultMap="BaseResultMap">
	#if(${dialect}=="oracle")
		select * from (select a.*,rownum rn from (
	#end
		select * from ${tablename}
		<trim prefix="where" prefixOverrides="and | AND | or | OR">
		#foreach(${col} in ${cols})
			<if test="${col.colName} != null">
				and ${col.realname} = #{${col.colName}}
			</if>
		#end
		</trim>
		<if test="order != null">
			order by ${order}
		</if>
	#if(${dialect}=="oracle")
		)a )
		<trim prefix="where" prefixOverrides="and | AND | or | OR">
			<if test="start != null and end != null">
				and rn between ${start} and ${end}
			</if>
		</trim>
	#else
		limit ${start},${rows}
	#end
	</select>

	<select id="queryDataGridCount" resultType="int">
		select count(1) from ${tablename}
		<trim prefix="where" prefixOverrides="and | AND | or | OR">
		#foreach(${col} in ${cols})
			<if test="${col.colName} != null">
				and ${col.realname} = #{${col.colName}}
			</if>
		#end
		</trim>
	</select>

	<!-- ${uname}管理 end -->
</mapper>